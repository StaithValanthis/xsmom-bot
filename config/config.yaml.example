exchange:
  id: bybit
  account_type: swap
  quote: USDT
  only_perps: true
  unified_margin: true
  testnet: false
  max_symbols: 10
  min_usd_volume_24h: 50000000
  min_price: 0.01
  timeframe: "1h"
  candles_limit: 1000

strategy:
  lookbacks: [1, 4, 12]
  lookback_weights: [1.0, 1.0, 1.0]
  vol_lookback: 36
  k_min: 1
  k_max: 2
  market_neutral: false
  gross_leverage: 2.0            # higher notional vs equity (was 1.0)
  max_weight_per_asset: 0.5
  regime_filter:
    enabled: false
    ema_len: 200
    slope_min_bps_per_day: 0
  funding_tilt:
    enabled: false

liquidity:
  adv_cap_pct: 0.01
  notional_cap_usdt: 1000

execution:
  order_type: market
  post_only: false
  price_offset_bps: 0
  slippage_bps_guard: 25
  set_leverage: 3
  rebalance_minute: 15           # calmer: reduce churn on small balance
  poll_seconds: 15
  align_after_funding_minutes: 5
  funding_hours_utc: [0, 8, 16]

risk:
  # Core SL/TP sizing (calmer defaults)
  atr_len: 21                    # was 14
  atr_mult_sl: 2.2               # was 1.6
  atr_mult_tp: 3.8               # use TP to book winners
  use_tp: true

  # Event-driven fast loop (intrabar management)
  fast_check_seconds: 2          # how often to check intrabar
  stop_timeframe: "3m"           # slower stop baseline (was 1m)
  trailing_enabled: true
  trail_atr_mult: 2.2            # match SL multiple
  breakeven_after_r: 1.5         # move stop to BE later (was 1.0)

  # Wick-resistance options (NEW)
  stop_on_close_only: true       # evaluate stops on CLOSED bars
  stop_buffer_bps: 8             # require extra breach beyond stop level
  cooldown_minutes_after_stop: 30  # avoid instant re-entry

  # One-shot partial TP
  partial_tp_enabled: true
  partial_tp_r: 2.0              # push partial further out
  partial_tp_size: 0.5

  # Kill switch
  max_daily_loss_pct: 5.0
  trade_disable_minutes: 120

  # Rebalance churn gate (skip tiny PnL flips/reductions)
  min_close_pnl_pct: 1.0          # was 0.5/0.8

costs:
  taker_fee_bps: 6.0
  maker_fee_bps: 0.0
  slippage_bps: 8.0
  funding_bps_per_day: 1.0

paths:
  state_path: "state/state.json"
  logs_dir: "logs"

logging:
  level: INFO
  file_max_mb: 20
  file_backups: 5
